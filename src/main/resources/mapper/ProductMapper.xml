<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shopmind.productservice.mapper.ProductMapper">


    <update id="incrementProductSalesCount">
        UPDATE sm_products
        SET sales_count = sales_count + #{quantity}
        WHERE id = #{productId}
    </update>
</mapper>
